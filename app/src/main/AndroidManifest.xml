<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.routine_work.android_r"
    android:installLocation="auto"
    android:versionCode="27"
    android:versionName="1.1.07">

    <uses-sdk
        android:minSdkVersion="3"
        android:targetSdkVersion="27" />
    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="false" />

    <application
        android:debuggable="false"
        android:icon="@drawable/ic_launcher_dot_r"
        android:label="@string/app_name">
        <!--
        android:hardwareAccelerated="true"
        android:theme="@android:style/Theme.Light"
        -->

        <activity
            android:name=".DashboardActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".PreferencesActivity"
            android:label="@string/preferences_title" />

        <!-- About App Activities -->
        <activity android:name=".about.AppVersionActivity" />
        <activity android:name=".about.AppStoreActivity" />
        <activity android:name=".about.AppManagementActivity" />

        <activity
            android:name=".string.StringViewerActivity"
            android:label="@string/string_viewer_title" />

        <activity
            android:name=".drawable.DrawableViewerActivity"
            android:label="@string/drawable_viewer_title" />
        <activity
            android:name=".drawable.DrawableZoomActivity"
            android:label="@string/drawable_viewer_title"
            android:theme="@android:style/Theme.Dialog" />

        <activity
            android:name=".color.ColorViewerActivity"
            android:label="@string/color_viewer_title" />

        <activity
            android:name=".dimension.DimensionViewerActivity"
            android:label="@string/dimension_viewer_title" />

        <activity
            android:name=".style.theme.ThemeViewerActivity"
            android:label="@string/theme_viewer_title" />
        <activity
            android:name=".style.theme.ThemeExampleActivity"
            android:label="@string/theme_example_title" />

        <activity
            android:name=".layout.list_item.ListItemViewerActivity"
            android:label="@string/list_item_viewer_title" />
        <activity
            android:name=".layout.list_item.ListItemExampleActivity"
            android:label="@string/list_item_example_title" />
        <activity
            android:name=".layout.list_item.ExpandableListItemExampleActivity"
            android:label="@string/list_item_example_title" />


        <activity
            android:name=".array.ArrayViewerActivity"
            android:label="@string/array_viewer_title" />
        <activity
            android:name=".array.ArrayResourceListActivity"
            android:label="@string/array_viewer_title" />

    </application>
</manifest> 
